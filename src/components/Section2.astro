---
import Button from "./ui/Button.astro";

interface SectionProps {
  title: string;
  subtitle: string;
  secondSubtitle?: string;
  media: string;
  type: string;
}
---

<main>
  <div class="container text-white position-relative">
    <div
      class="row justify-content-between flex-lg-row-reverse flex-column-reverse"
    >
      <div class="col-lg-5 col-12 mb-lg-0 mb-5">
        <p class="title">About Us</p>
        <p class="subtitle">
          At WealthWize, we provide tailored accounting solutions that
          streamline financial management for businesses of all sizes. Our
          experienced team is dedicated to helping you navigate financial
          reporting, tax compliance, and strategic planning.
        </p>
        <p class="subtitle subtitle-2">
          We empower our clients with accurate insights and efficient systems,
          allowing them to focus on growing their business. Whether you're a
          startup or an established company, WealthWize is here to support your
          financial goals and ensure your success.
        </p>
        <!-- 
        <div class="mt-4 position-absolute bottom-0 start-0 button-wrapper">
          <Button label="Contact with us" variant="filled" />
        </div> -->

        <div class="inverted-border-radius position-absolute bottom-0"></div>

        <div class="helper-1"></div>
        <div class="helper-2"></div>
        <div class="helper-22">
          <div class="w-100 h-100 ms-auto position-relative">
            <div class="position-absolute bottom-0 end-0">
              <Button label="Contact with us" variant="filled" />
            </div>
          </div>
        </div>
      </div>

      <div
        class="col-lg-6 col-12 d-flex justify-content-center align-items-start vid"
      >
        <video width="100%" autoplay muted loop>
          <source src="video2.mp4" type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      </div>
    </div>
  </div>
</main>

<style>
  .container {
    background-color: #4eb4d1;
    border-radius: 30px;
    border-bottom-right-radius: 3rem;
    border-bottom-left-radius: 0;
    margin-top: 200px;
    padding: 100px;
    padding-bottom: 0;
  }

  .title {
    font-size: 42px;
    line-height: 48px;
    font-weight: 500;
  }

  .subtitle {
    font-size: 17px;
    line-height: 24px;
    font-weight: 400;
  }

  .subtitle-2 {
    margin-bottom: 100px;
  }

  /* .vid {
    background-color: #75b3ce;
    border-radius: 15px;
  } */

  .helper-1 {
    width: calc(100% - 219.18px);
    height: 85px;
    position: absolute;
    left: 0;
    bottom: -85px;
    background-color: #4eb4d1;
    border-bottom-right-radius: 3rem;
    border-bottom-left-radius: 3rem;
  }

  .helper-2 {
    width: 219.18px;
    height: 85px;
    background-color: #4eb4d1;
    position: absolute;
    bottom: -85px;
    right: 0;
  }

  .helper-22 {
    width: 219.18px;
    height: 85px;
    background: #e1e3e5;
    position: absolute;
    bottom: -85px;
    right: 0;
    border-top-left-radius: 3rem;
  }

  @media only screen and (max-width: 991px) {
    .subtitle-2 {
      margin-bottom: 0;
    }
  }

  @media only screen and (max-width: 767px) {
    .container {
      padding: 50px;
      padding-bottom: 0;
    }

    .subtitle-2 {
      margin-bottom: 0;
    }
  }

  @media only screen and (max-width: 575px) {
    .container {
      margin-top: 100px;
      padding: 25px;
      padding-bottom: 0;
      border-radius: 0;
    }

    .helper-1 {
      border-bottom-left-radius: 0;
    }
  }
</style>
