<style>
  .container {
    background: var(--primary-color);
    border-radius: 2.8rem;
    border-bottom-right-radius: 0;
    margin-top: 100px;
    padding: 100px;
    padding-bottom: 0;
    color: var(--text-light-color);
  }

  .container-reversed {
    border-bottom-right-radius: 2.8rem;
    border-bottom-left-radius: 0;
    margin-top: 100px;
    padding: 100px;
    padding-bottom: 0;
  }

  .row {
    padding-bottom: 100px;
  }

  .title {
    font-size: 42px;
    line-height: 48px;
    font-weight: 500;
  }

  .subtitle {
    font-size: 17px;
    line-height: 24px;
    font-weight: 400;
  }

  .helper-1 {
    width: calc(100% - 250px);
    height: 85px;
    position: absolute;
    right: 0;
    bottom: -85px;
    background: var(--primary-color);
    border-bottom-right-radius: 2.8rem;
    border-bottom-left-radius: 2.8rem;
  }

  .helper-1-reversed {
    width: calc(100% - 250px);
    height: 85px;
    position: absolute;
    left: 0;
    bottom: -85px;
    background: var(--primary-color);
    border-bottom-right-radius: 2.8rem;
    border-bottom-left-radius: 2.8rem;
  }

  .helper-2 {
    width: 250px;
    height: 85px;
    background: var(--primary-color);
    position: absolute;
    bottom: -85px;
    left: 0;
  }

  .helper-2-reversed {
    width: 250px;
    height: 85px;
    background: var(--primary-color);
    position: absolute;
    bottom: -85px;
    right: 0;
  }

  .helper-3 {
    width: 250px;
    height: 85px;
    background: var(--secondary-color);
    position: absolute;
    bottom: -85px;
    left: 0;
    border-top-right-radius: 2.8rem;
  }

  .helper-3-reversed {
    width: 250px;
    height: 85px;
    background: var(--secondary-color);
    position: absolute;
    bottom: -85px;
    right: 0;
    border-top-left-radius: 2.8rem;
  }

  @media only screen and (max-width: 991px) {
  }

  @media only screen and (max-width: 767px) {
    .container {
      padding: 50px;
      padding-bottom: 0;
    }

    .row {
