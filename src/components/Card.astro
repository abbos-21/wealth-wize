---
import Button from "../components/ui/Button.astro";

interface Props {
  title: string;
  subtitle: string;
  media: string;
  mediaType?: string;
  buttonLabel: string;
  style?: string;
}

const { title, subtitle, media, mediaType, buttonLabel, style } = Astro.props;
---

<main class="col-12 col-lg-4 mb-lg-0 mb-4" style={style}>
  <div class="card text-white p-2" style="">
    <div class="p-3 img-wrapper">
      {
        mediaType === "video" ? (
          <video width="100%" autoplay muted loop>
            <source src={media} type="video/mp4" />
          </video>
        ) : (
          <img src={media} alt={title} class="img-fluid" />
        )
      }
    </div>
    <div class="card-body">
      <h5 class="card-title">{title}</h5>
      <p class="card-text">
        {subtitle}
      </p>
      <Button label={buttonLabel} variant="filled" />
    </div>
  </div>
</main>

<style>
  .card {
    background: var(--primary-color);
    border: none;
    border-radius: 20px;
    transition: all 0.3s;
  }

  .img-wrapper video {
    border-radius: 10px;
  }

  .title {
    font-size: 42px;
    line-height: 48px;
    font-weight: 600;
    color: var(--button-text-color);
  }
</style>

